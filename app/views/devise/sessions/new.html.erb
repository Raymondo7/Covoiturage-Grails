<section class="mt-5 py-7">
  <div class="bg-holder w-50 bg-right d-none d-lg-block" style="background-image: url('<%= asset_path('car-5.jpg') %>'); object-fit: contain">
  </div>
  <!--/.bg-holder-->

  <div class="container">
    <div class="row">
      <div class="col-lg-6 py-5 py-xl-5 py-xxl-7">
        <h1 class="display-5 text-primary fw-bold">Connexion</h1>
        <div class="pt-1">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="col-md-12">
              <%= f.label :email , class: "form-label"%><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control'%>
            </div>

            <div class="col-md-12">
              <%= f.label :password  , class: "form-label"%><br/>
              <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control'%>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="col-md-12">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me  , class: "form-label"%>
              </div>
            <% end %>

            <div class="actions ">
              <%= f.submit "Log in" , class: 'form-control'%>
            </div>
          <% end %>

          <%= render "devise/shared/links" , class: 'btn form-control'%>
        </div>
      </div>
    </div>
  </div>

</section>