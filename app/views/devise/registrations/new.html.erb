<section class="mt-5 py-0">
  <div class="bg-holder w-50 bg-right d-none d-lg-block" style="background-image: url('<%= asset_path('car-2.jpg') %>'); object-fit: contain">
  </div>
  <!--/.bg-holder-->

  <div class="container">
    <div class="row">
      <div class="col-lg-6 py-5 py-xl-5 py-xxl-7">
        <h1 class="display-5 text-primary fw-bold">Inscription</h1>
        <div class="pt-1">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'row g-4 mt-1' }) do |f| %>
  <!-- Informations personnelles -->
            <div class="col-md-6">
              <%= f.label :first_name, class: 'form-label' %>
              <%= f.text_field :first_name, class: 'form-control', placeholder: 'Votre prénom', required: true %>
            </div>
            <div class="col-md-6">
              <%= f.label :last_name, class: 'form-label' %>
              <%= f.text_field :last_name, class: 'form-control', placeholder: 'Votre nom', required: true %>
            </div>
            <div class="col-md-12">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Votre adresse email', required: true %>
            </div>
            <div class="col-md-12">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Votre mot de passe', required: true %>
            </div>
  <!-- Add other fields as needed -->

  <!-- Bouton de soumission -->
          <div class="col-12 d-grid mt-6">
            <%= f.submit 'S\'inscrire', class: 'btn btn-secondary' %>
          </div>
<% end %>

            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>

</section>
