<section class="mt-5">
  <!-- recherche.html.erb -->
  <% if @trips.present? %>
    <h2 class="mb-4">Résultats de la recherche :</h2>
    <div class="list-group">
      <%= render partial: 'trip', collection: @trips %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4" role="alert">
      Aucun trajet trouvé pour les critères de recherche spécifiés.
    </div>
    <div class="text-center">
      <%= image_tag 'vide.png', width: 300, height: 300 %>
    </div>
  <% end %>
</section>